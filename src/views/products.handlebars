<h1>Productos</h1>

<table id="product-list">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Descripción</th>
      <th>Precio</th>
      <th>Stock</th>
      <th>Categoría</th>
      <th>Disponibilidad</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>${{this.price}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.category}}</td>
        <td>{{this.availability ? 'Disponible' : 'Agotado'}}</td>
        <td>
          <form action="/api/carts/{{cartId}}/products/{{this._id}}" method="post">
            <input type="hidden" name="quantity" value="1">
            <button type="submit">Agregar al carrito</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
